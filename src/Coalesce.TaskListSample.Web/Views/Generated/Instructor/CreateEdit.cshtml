<div class="panel panel-default">
    <div class="panel-heading">
        <div class="btn-group pull-right">
            <button onclick="window.history.back()" class="btn btn-sm btn-default">Back</button>
            <button data-bind="click:function() { load(); }" class="btn btn-sm btn-default">Refresh</button>
        </div>
        <h1 class="clearfix" style="display:inline-block;">Instructor</h1>
        <span class="label label-info" data-bind="fadeVisible: isLoading()">Loading...</span>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group btn-warning" data-bind="if: errorMessage()">
                <label class="col-md-4 control-label">Error</label>
                <div class="col-md-8">
                    <div class="form-control-static" data-bind="text: errorMessage"></div>
                </div>
            </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Hire Date</label>
<div class="col-md-8 prop-hireDate">@(Knockout.InputFor<Coalesce.TaskListSample.Data.Models.Instructor>(p => p.HireDate))</div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Course Assignments</label>
<div class="col-md-8 prop-courseAssignments"><a data-bind='attr: {href: CourseAssignmentsListUrl}, text: courseAssignments().length + " - Edit"' class='btn btn-default btn-sm'></a></div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Office Assignment</label>
<div class="col-md-7 prop-officeAssignment">@(Knockout.SelectForObject<Coalesce.TaskListSample.Data.Models.Instructor>(p => p.OfficeAssignment))</div>                            <div class="col-md-1" data-bind="with: officeAssignment">
                                <a data-bind="attr: {href: editUrl}" class="btn btn-default pull-right"><i class="fa fa-ellipsis-h "></i></a>
                            </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Last Name</label>
<div class="col-md-8 prop-lastName">@(Knockout.InputFor<Coalesce.TaskListSample.Data.Models.Instructor>(p => p.LastName))</div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">First Name</label>
<div class="col-md-8 prop-firstMidName">@(Knockout.InputFor<Coalesce.TaskListSample.Data.Models.Instructor>(p => p.FirstMidName))</div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Full Name</label>
<div class="col-md-8 prop-fullName">@(Knockout.InputFor<Coalesce.TaskListSample.Data.Models.Instructor>(p => p.FullName))</div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Full Name Calculated</label>
<div class="col-md-8 prop-fullNameCalculated">@(Knockout.DisplayFor<Coalesce.TaskListSample.Data.Models.Instructor>(p => p.FullNameCalculated, false))</div>                    </div>
        </div>
    </div>
    <div class="panel-body">
    </div>
</div>


    @section Scripts
    {
    <script>
        var ainstructor = new ViewModels.Instructor();
        ainstructor.includes = "Editor";

        ainstructor.saveCallbacks.push(function(obj){
            // If there is a new id, set the one for this page
            if (!Coalesce.Utilities.GetUrlParameter('id')){
                if (ainstructor.myId){
                    var newUrl = Coalesce.Utilities.SetUrlParameter(window.location.href, "id", ainstructor.myId);
                    window.history.replaceState(null, window.document.title, newUrl);
                }
            }
        });

        @if (ViewBag.Id != null)
                {
                    @:ainstructor.load('@ViewBag.Id');
                }
        @foreach (var kvp in ViewBag.ParentIds)
                {
                    @:ainstructor.@(((string)(@kvp.Key)))(@kvp.Value);
                }

        window.onbeforeunload = function(){
            if (ainstructor.isDirty()) ainstructor.save();
        }

        ainstructor.isSavingAutomatically = false;
        ainstructor.loadChildren(function() {
            ko.applyBindings(ainstructor);
            ainstructor.isSavingAutomatically = true;
        });
    </script>
    }
