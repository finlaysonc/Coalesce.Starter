<div class="panel panel-default">
    <div class="panel-heading">
        <div class="btn-group pull-right">
            <button onclick="window.history.back()" class="btn btn-sm btn-default">Back</button>
            <button data-bind="click:function() { load(); }" class="btn btn-sm btn-default">Refresh</button>
        </div>
        <h1 class="clearfix" style="display:inline-block;">Enrollment</h1>
        <span class="label label-info" data-bind="fadeVisible: isLoading()">Loading...</span>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group btn-warning" data-bind="if: errorMessage()">
                <label class="col-md-4 control-label">Error</label>
                <div class="col-md-8">
                    <div class="form-control-static" data-bind="text: errorMessage"></div>
                </div>
            </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Grade</label>
<div class="col-md-8 prop-grade">@(Knockout.SelectFor<Coalesce.TaskListSample.Data.Models.Enrollment>(p => p.Grade))</div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Course</label>
<div class="col-md-7 prop-course">@(Knockout.SelectForObject<Coalesce.TaskListSample.Data.Models.Enrollment>(p => p.Course))</div>                            <div class="col-md-1" data-bind="with: course">
                                <a data-bind="attr: {href: editUrl}" class="btn btn-default pull-right"><i class="fa fa-ellipsis-h "></i></a>
                            </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Student</label>
<div class="col-md-7 prop-student">@(Knockout.SelectForObject<Coalesce.TaskListSample.Data.Models.Enrollment>(p => p.Student))</div>                            <div class="col-md-1" data-bind="with: student">
                                <a data-bind="attr: {href: editUrl}" class="btn btn-default pull-right"><i class="fa fa-ellipsis-h "></i></a>
                            </div>
                    </div>
        </div>
    </div>
    <div class="panel-body">
    </div>
</div>


    @section Scripts
    {
    <script>
        var aenrollment = new ViewModels.Enrollment();
        aenrollment.includes = "Editor";

        aenrollment.saveCallbacks.push(function(obj){
            // If there is a new id, set the one for this page
            if (!Coalesce.Utilities.GetUrlParameter('id')){
                if (aenrollment.myId){
                    var newUrl = Coalesce.Utilities.SetUrlParameter(window.location.href, "id", aenrollment.myId);
                    window.history.replaceState(null, window.document.title, newUrl);
                }
            }
        });

        @if (ViewBag.Id != null)
                {
                    @:aenrollment.load('@ViewBag.Id');
                }
        @foreach (var kvp in ViewBag.ParentIds)
                {
                    @:aenrollment.@(((string)(@kvp.Key)))(@kvp.Value);
                }

        window.onbeforeunload = function(){
            if (aenrollment.isDirty()) aenrollment.save();
        }

        aenrollment.isSavingAutomatically = false;
        aenrollment.loadChildren(function() {
            ko.applyBindings(aenrollment);
            aenrollment.isSavingAutomatically = true;
        });
    </script>
    }
