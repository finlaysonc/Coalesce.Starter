<div class="panel panel-default">
    <div class="panel-heading">
        <div class="btn-group pull-right">
            <button onclick="window.history.back()" class="btn btn-sm btn-default">Back</button>
            <button data-bind="click:function() { load(); }" class="btn btn-sm btn-default">Refresh</button>
        </div>
        <h1 class="clearfix" style="display:inline-block;">Course</h1>
        <span class="label label-info" data-bind="fadeVisible: isLoading()">Loading...</span>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group btn-warning" data-bind="if: errorMessage()">
                <label class="col-md-4 control-label">Error</label>
                <div class="col-md-8">
                    <div class="form-control-static" data-bind="text: errorMessage"></div>
                </div>
            </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Title</label>
<div class="col-md-8 prop-title">@(Knockout.InputFor<Coalesce.TaskListSample.Data.Models.Course>(p => p.Title))</div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Credits</label>
<div class="col-md-8 prop-credits">@(Knockout.InputFor<Coalesce.TaskListSample.Data.Models.Course>(p => p.Credits))</div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Department I D</label>
<div class="col-md-8 prop-departmentID">@(Knockout.InputFor<Coalesce.TaskListSample.Data.Models.Course>(p => p.DepartmentID))</div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Department</label>
<div class="col-md-7 prop-department">@(Knockout.SelectForObject<Coalesce.TaskListSample.Data.Models.Course>(p => p.Department))</div>                            <div class="col-md-1" data-bind="with: department">
                                <a data-bind="attr: {href: editUrl}" class="btn btn-default pull-right"><i class="fa fa-ellipsis-h "></i></a>
                            </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Enrollments</label>
<div class="col-md-8 prop-enrollments"><a data-bind='attr: {href: EnrollmentsListUrl}, text: enrollments().length + " - Edit"' class='btn btn-default btn-sm'></a></div>                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Course Assignments</label>
<div class="col-md-8 prop-courseAssignments"><a data-bind='attr: {href: CourseAssignmentsListUrl}, text: courseAssignments().length + " - Edit"' class='btn btn-default btn-sm'></a></div>                    </div>
        </div>
    </div>
    <div class="panel-body">
    </div>
</div>


    @section Scripts
    {
    <script>
        var acourse = new ViewModels.Course();
        acourse.includes = "Editor";

        acourse.saveCallbacks.push(function(obj){
            // If there is a new id, set the one for this page
            if (!Coalesce.Utilities.GetUrlParameter('id')){
                if (acourse.myId){
                    var newUrl = Coalesce.Utilities.SetUrlParameter(window.location.href, "id", acourse.myId);
                    window.history.replaceState(null, window.document.title, newUrl);
                }
            }
        });

        @if (ViewBag.Id != null)
                {
                    @:acourse.load('@ViewBag.Id');
                }
        @foreach (var kvp in ViewBag.ParentIds)
                {
                    @:acourse.@(((string)(@kvp.Key)))(@kvp.Value);
                }

        window.onbeforeunload = function(){
            if (acourse.isDirty()) acourse.save();
        }

        acourse.isSavingAutomatically = false;
        acourse.loadChildren(function() {
            ko.applyBindings(acourse);
            acourse.isSavingAutomatically = true;
        });
    </script>
    }
